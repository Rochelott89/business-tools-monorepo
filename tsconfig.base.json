      "@bt-libs/marketing/undefined/social-media-dashboard": [
        "libs/marketing/undefined/src/index.ts"
      ],
      "@business-tools/workspace-generators-plugin": ["libs/workspace-generators-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
}
